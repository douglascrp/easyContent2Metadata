<?xml version="1.0" encoding="UTF-8"?>
<model name="acme:contentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>Beecon Document Model</description>
    <author>mimacom</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
    </imports>

    <!-- Custom namespace for the EM company -->
    <namespaces>
        <namespace uri="http://www.mimacom.com/alfresco/extractor_mapping/1.0" prefix="em"/>
    </namespaces>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <types>
        <!--
            EM Enterprise-wide Document root type.
            All other custom document types would extend this one.
        -->
        <type name="em:beeconDocument">
            <title>Beecon Document Type</title>
            <parent>cm:content</parent>
            <properties>
                <property name="em:author">
                    <title>Document Author</title>
                    <type>d:text</type>
                </property>
                <property name="em:city">
                    <title>City</title>
                    <type>d:text</type>
                </property>
                <property name="em:date">
                    <title>Date</title>
                    <type>d:date</type>
                </property>
            </properties>
        </type>
    </types>
</model>